<DisplayTiles>:
    name: "DisplayTile"

    stockresult : stockresult
    tileName : tileName
    FloatLayout:
        cols: 1
        FloatLayout:
            size_hint: 1,1
            cols: 2
            Label:
                text: "Search Tiles"
                pos_hint: {"x": 0.3, "y":0.8}
                size_hint: 0.2,0.2
                color: 0.74, 0.2, 0.3, 1
                bold: True

            Label:
                text: "Tiles Name"
                pos_hint: {"x": 0, "y":0.7}
                size_hint: 0.3,0.05
                color: 0.74, 0.2, 0.3, 1
                bold: True

            TextInput:
                input_type: 'text'
                pos_hint: {"x": 0.4, "y":0.7}
                size_hint: 0.3,0.05
                multiline: False
                bold: True
                foreground_color: 0.74, 0.2, 0.3, 1
                id: tileName

            Button:
                text : "Search"
                pos_hint: {"x": 0.8, "y":0.7}
                size_hint : 0.2,0.1
                on_press : root.searchResult()
            Button:
                text : "<<"
                pos_hint: {"x": 0, "y":0.9}
                size_hint : 0.1,0.1
                on_release:
                    app.root.current = "FirstPage"
                    root.manager.transition.direction = "right"
        FloatLayout:
            size_hint: 1, 0.6
            cols: 1
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                Label:
                    id : stockresult
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding: 10, 10
                    text: 'Please Search'

